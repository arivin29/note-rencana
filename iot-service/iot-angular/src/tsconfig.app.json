{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "../",
    "types": [],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@sdk/*": ["src/sdk/*"],
      "@models/*": ["src/app/models/*"],
      "@services/*": ["src/app/services/*"],
      "@components/*": ["src/app/components/*"],
      "@pages/*": ["src/app/pages/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
